---
import BaseLayout from './BaseLayout.astro';
import Comments from '@/components/Comments.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    updatedDate?: string;
    tags?: string[];
    heroImage?: string;
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article>
    <div class="article-header">
      <div class="post-meta">
        <time class="post-date" datetime={frontmatter.pubDate}>{formattedDate}</time>
        {frontmatter.tags && (
          <div class="post-tags">
            {frontmatter.tags.map((tag: string) => (
              <span class="post-tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <h1>{frontmatter.title}</h1>
      <p class="description">{frontmatter.description}</p>
    </div>

    {frontmatter.heroImage && (
      <img src={frontmatter.heroImage} alt={frontmatter.title} style="max-width: 100%; width: 100%; border-radius: 12px; border: 1px solid var(--wx-border); margin-bottom: 2rem;" />
    )}

    <div class="article-content">
      <slot />
    </div>
  </article>

  <Comments title={frontmatter.title} />
</BaseLayout>
