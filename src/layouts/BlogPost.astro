---
import BaseLayout from './BaseLayout.astro';
import Comments from '@/components/Comments.astro';
import PageViews from '@/components/PageViews.astro';
import PostNavigation from '@/components/PostNavigation.astro';
import RelatedPosts from '@/components/RelatedPosts.astro';
import { getCollection } from 'astro:content';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    updatedDate?: string;
    tags?: string[];
    heroImage?: string;
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// 현재 포스트와 전체 포스트 가져오기
const allPosts = await getCollection('blog');
const currentSlug = Astro.url.pathname.replace('/blog/', '').replace('/', '');
const currentPost = allPosts.find((p) => p.id.replace(/\.md$/, '') === currentSlug);
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article>
    <div class="article-header">
      <div class="post-meta">
        <time class="post-date" datetime={frontmatter.pubDate}>{formattedDate}</time>
        <PageViews slug={currentSlug} />
        {frontmatter.tags && (
          <div class="post-tags">
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tag/${tag}`} class="post-tag">{tag}</a>
            ))}
          </div>
        )}
      </div>
      <h1>{frontmatter.title}</h1>
      <p class="description">{frontmatter.description}</p>
    </div>

    {frontmatter.heroImage && (
      <img class="hero-image" src={frontmatter.heroImage} alt={frontmatter.title} />
    )}

    <div class="article-content">
      <slot />
    </div>
  </article>

  {currentPost && (
    <>
      <PostNavigation currentPost={currentPost} allPosts={allPosts} />
      <RelatedPosts currentPost={currentPost} allPosts={allPosts} />
    </>
  )}

  <Comments title={frontmatter.title} />
</BaseLayout>
