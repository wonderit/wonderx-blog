---
import '@/styles/global.css';
import { inject } from '@vercel/analytics';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const {
  title,
  description = 'AI 자동화, Claude Code, Vibe 코딩으로 더 게으르게 일하는 개발자 블로그. 비개발자도 쉽게 따라하는 자동화 가이드.',
  keywords = 'AI 자동화, Claude Code, Vibe 코딩, 바이브 코딩, 텔레그램 봇, 개발 자동화, OpenClaw, AI 비서, 개인 비서, 사이드 프로젝트, 1인 개발자, 비개발자 자동화',
  ogImage = '/og-default.png'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// GA4 Measurement ID
const GA4_ID = import.meta.env.PUBLIC_GA4_ID || 'G-J87KGPYQ58';
---

<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content="WonderX" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <!-- OG Tags -->
  <meta property="og:title" content={`${title} | WonderX Blog`} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="WonderX Blog" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content="ko_KR" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={`${title} | WonderX Blog`} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Naver / Daum SEO -->
  <meta name="naver-site-verification" content="" />

  <title>{title} | WonderX Blog</title>

  <!-- Google Analytics 4 -->
  <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`}></script>
  <script is:inline define:vars={{ GA4_ID }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', GA4_ID);
  </script>

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "WonderX Blog",
    "description": description,
    "url": "https://blog.wonderx.co.kr",
    "author": {
      "@type": "Person",
      "name": "WonderX"
    },
    "publisher": {
      "@type": "Organization",
      "name": "WonderX"
    }
  })} />
</head>
<body>
  <header class="site-header">
    <div class="header-inner">
      <a href="/" class="logo">
        <span class="logo-mark">Wx</span>
        WonderX
      </a>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Blog</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="footer-inner">
      <p class="footer-copy">&copy; {new Date().getFullYear()} WonderX. All rights reserved.</p>
      <ul class="footer-links">
        <li><a href="mailto:x@wonderx.co.kr">x@wonderx.co.kr</a></li>
        <li><a href="/rss.xml">RSS</a></li>
      </ul>
    </div>
  </footer>

  <!-- Vercel Analytics -->
  <script>
    import { inject } from '@vercel/analytics';
    inject();
  </script>

  <!-- Goatcounter Analytics -->
  <script data-goatcounter="https://wonderx.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
</body>
</html>
