---
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentPost: CollectionEntry<'blog'>;
  allPosts: CollectionEntry<'blog'>[];
}

const { currentPost, allPosts } = Astro.props;

// 날짜순 정렬 (최신순)
const sortedPosts = allPosts
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const currentIndex = sortedPosts.findIndex((p) => p.id === currentPost.id);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

{(prevPost || nextPost) && (
  <nav class="post-navigation">
    {prevPost && (
      <a href={`/blog/${prevPost.id.replace(/\.md$/, '')}`} class="nav-link prev">
        <span class="nav-label">← 이전 글</span>
        <span class="nav-title">{prevPost.data.title}</span>
      </a>
    )}
    {nextPost && (
      <a href={`/blog/${nextPost.id.replace(/\.md$/, '')}`} class="nav-link next">
        <span class="nav-label">다음 글 →</span>
        <span class="nav-title">{nextPost.data.title}</span>
      </a>
    )}
  </nav>
)}

<style>
  .post-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 4rem 0 3rem;
    padding: 2.5rem 0;
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
    max-width: var(--reading-width);
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.5rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    background: var(--bg-secondary);
  }

  .nav-link.prev {
    text-align: left;
  }

  .nav-link.next {
    text-align: right;
    grid-column: 2;
  }

  .nav-link.prev:only-child {
    grid-column: 1;
  }

  .nav-link.next:first-child {
    grid-column: 2;
  }

  .nav-link:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-medium);
  }

  .nav-label {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .nav-title {
    font-size: 1rem;
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .post-navigation {
      grid-template-columns: 1fr;
      margin: 3rem 0 2rem;
      padding: 2rem 0;
    }

    .nav-link {
      padding: 1.25rem;
    }

    .nav-link.next {
      grid-column: 1;
    }

    .nav-link.next:first-child {
      grid-column: 1;
    }
  }
</style>
