---
interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<div class="page-views">
  <span class="view-label">조회수</span>
  <span class="view-count" id="stats">-</span>
</div>

<script is:inline>
  // Goatcounter에서 페이지뷰 가져오기
  if (window.goatcounter && window.goatcounter.visit_count) {
    window.goatcounter.visit_count({
      append: '#stats',
      type: 'html',
      no_branding: true,
    });
  }
</script>

<style>
  .page-views {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .view-count {
    font-weight: 500;
    color: var(--text-secondary);
  }

  .view-label {
    font-size: 0.8125rem;
  }
</style>
