---
// Right Panel - Recently Updated & Trending Tags (Chirpy-style)
import type { CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;

// Recently Updated - 최근 5개
const recentPosts = posts
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

// Trending Tags - 상위 10개
const tagCounts: Record<string, number> = {};
posts.filter((p) => !p.data.draft).forEach((post) => {
  (post.data.tags || []).forEach((tag: string) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

const trendingTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1] || a[0].localeCompare(b[0]))
  .slice(0, 10)
  .map(([tag, count]) => ({ tag, count }));
---

<aside id="panel-wrapper" class="right-panel">
  <div class="panel-inner">
    <!-- Recently Updated -->
    <section class="panel-section">
      <h3 class="panel-title">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        Recently Updated
      </h3>
      <ul class="recent-list">
        {recentPosts.map((post) => {
          const slug = post.id.replace(/\.md$/, '');
          return (
            <li>
              <a href={`/blog/${slug}`} class="recent-link">{post.data.title}</a>
            </li>
          );
        })}
      </ul>
    </section>

    <!-- Trending Tags -->
    <section class="panel-section">
      <h3 class="panel-title">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/></svg>
        Trending Tags
      </h3>
      <div class="trending-tags">
        {trendingTags.map(({ tag, count }) => (
          <a href={`/tag/${tag}`} class="trending-tag">
            {tag}
            <span class="tag-count">{count}</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Ad Space -->
    <section class="panel-section panel-ad">
      <div class="ad-placeholder">
        <span class="ad-label">AD</span>
      </div>
    </section>
  </div>
</aside>
