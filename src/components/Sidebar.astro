---
// Left Sidebar Component (Chirpy-style)
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).filter((p) => !p.data.draft);

// 카테고리별 글 수
const categories = [
  { id: 'ai-automation', label: 'AI 자동화', icon: 'fa-robot' },
  { id: 'side-project', label: '사이드 프로젝트', icon: 'fa-rocket' },
  { id: 'dev-log', label: '개발 일지', icon: 'fa-code' },
  { id: 'social', label: '소셜링', icon: 'fa-users' },
  { id: 'tutorial', label: '튜토리얼', icon: 'fa-book' },
];

const categoryCounts = categories
  .map((cat) => ({
    ...cat,
    count: posts.filter((p) => p.data.category === cat.id).length,
  }))
  .filter((cat) => cat.count > 0);

const currentPath = Astro.url.pathname;
---

<aside id="sidebar">
  <div class="sidebar-inner">
    <!-- Profile -->
    <div class="sidebar-profile">
      <a href="/" class="avatar-link">
        <img src="/images/about-character.png" alt="WonderX" class="avatar-img" />
      </a>
      <a href="/" class="sidebar-site-title">WonderX Blog</a>
      <p class="sidebar-tagline">Build, Automate, Relax.</p>
    </div>

    <!-- Navigation -->
    <nav class="sidebar-nav">
      <ul class="sidebar-menu">
        <li>
          <a href="/" class:list={['sidebar-link', { active: currentPath === '/' }]}>
            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
            <span>HOME</span>
          </a>
        </li>
        <li>
          <a href="/categories" class:list={['sidebar-link', { active: currentPath.startsWith('/categor') }]}>
            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
            <span>CATEGORIES</span>
          </a>
        </li>
        <li>
          <a href="/tags" class:list={['sidebar-link', { active: currentPath === '/tags' }]}>
            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
            <span>TAGS</span>
          </a>
        </li>
        <li>
          <a href="/archives" class:list={['sidebar-link', { active: currentPath === '/archives' }]}>
            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 8v13H3V8"/><path d="M1 3h22v5H1z"/><path d="M10 12h4"/></svg>
            <span>ARCHIVES</span>
          </a>
        </li>
        <li>
          <a href="/about" class:list={['sidebar-link', { active: currentPath === '/about' }]}>
            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span>ABOUT</span>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Bottom Section -->
    <div class="sidebar-bottom">
      <div class="sidebar-social">
        <a href="https://github.com/wonderit" target="_blank" rel="noopener" aria-label="GitHub" class="social-icon">
