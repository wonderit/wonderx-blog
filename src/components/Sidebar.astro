      </div>
    </div>
  </div>
</aside>

<!-- Mobile sidebar trigger -->
<button id="sidebar-trigger" class="sidebar-trigger" aria-label="메뉴 열기">
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="24" height="24">
    <line x1="3" y1="12" x2="21" y2="12"/>
    <line x1="3" y1="6" x2="21" y2="6"/>
    <line x1="3" y1="18" x2="21" y2="18"/>
  </svg>
</button>

<div id="sidebar-mask" class="sidebar-mask"></div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var trigger = document.getElementById('sidebar-trigger');
    var sidebar = document.getElementById('sidebar');
    var mask = document.getElementById('sidebar-mask');

    if (trigger && sidebar && mask) {
      trigger.addEventListener('click', function() {
        sidebar.classList.toggle('show');
        mask.classList.toggle('show');
      });
      mask.addEventListener('click', function() {
        sidebar.classList.remove('show');
        mask.classList.remove('show');
      });
    }
  });
</script>
