---
import type { CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
  limit?: number;
}

const { posts, limit = 3 } = Astro.props;

// 클라이언트 사이드에서 인기글을 계산하기 위한 placeholder
const recentPosts = posts
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, limit);
---

<section class="popular-posts">
  <h2 class="popular-title">
    인기 글
  </h2>
  <div class="popular-list" data-posts={JSON.stringify(recentPosts.map(p => ({ id: p.id, title: p.data.title, description: p.data.description, pubDate: p.data.pubDate })))}>
    {recentPosts.map((post) => {
      const formattedDate = post.data.pubDate.toLocaleDateString('ko-KR', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      });
      return (
        <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="popular-item" data-slug={post.id.replace(/\.md$/, '')}>
          <div class="popular-header">
            <h3 class="popular-item-title">{post.data.title}</h3>
            <span class="popular-views">-</span>
          </div>
          <p class="popular-desc">{post.data.description}</p>
          <time class="popular-date" datetime={post.data.pubDate.toISOString()}>
            {formattedDate}
          </time>
        </a>
      );
    })}
  </div>
</section>

<script>
  function getPageViews(slug: string): number {
    const key = `pv_${slug}`;
    return parseInt(localStorage.getItem(key) || '0', 10);
  }

  function getAllPageViews(): Record<string, number> {
    const views: Record<string, number> = {};
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      if (key?.startsWith('pv_')) {
        const slug = key.replace('pv_', '');
        views[slug] = parseInt(localStorage.getItem(key) || '0', 10);
      }
    }
    return views;
  }

  document.addEventListener('DOMContentLoaded', () => {
    const popularList = document.querySelector('.popular-list') as HTMLElement;
    if (!popularList) return;

    const allViews = getAllPageViews();
    const items = Array.from(document.querySelectorAll('.popular-item')) as HTMLElement[];

    // 각 항목에 조회수 표시
    items.forEach((item) => {
      const slug = item.dataset.slug;
      if (!slug) return;

      const views = getPageViews(slug);
      const viewsEl = item.querySelector('.popular-views') as HTMLElement;
      if (viewsEl) {
        viewsEl.textContent = `조회 ${views.toLocaleString()}`;
      }
    });

    // 조회수 기준으로 재정렬
    items.sort((a, b) => {
      const aViews = getPageViews(a.dataset.slug || '');
      const bViews = getPageViews(b.dataset.slug || '');
      return bViews - aViews;
    });

    // DOM 재배치
    items.forEach((item) => popularList.appendChild(item));
  });
</script>

<style>
  .popular-posts {
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-light);
  }

  .popular-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    letter-spacing: -0.02em;
  }


  .popular-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .popular-item {
    display: block;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--border-light);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .popular-item:first-child {
    padding-top: 0;
  }

  .popular-item:hover {
    opacity: 0.75;
  }

  .popular-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .popular-item-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.5;
    flex: 1;
    letter-spacing: -0.01em;
  }

  .popular-views {
    font-size: 0.8125rem;
    color: var(--accent-primary);
    font-weight: 500;
    white-space: nowrap;
  }

  .popular-desc {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 0.5rem 0;
  }

  .popular-date {
    display: block;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  @media (max-width: 768px) {
    .popular-item-title {
      font-size: 1rem;
    }

    .popular-desc {
      font-size: 0.875rem;
    }
  }
</style>
