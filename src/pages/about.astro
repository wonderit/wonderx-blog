  .character-illustration svg {
    width: 100%;
    height: 100%;
  }

  .about-intro h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--wx-primary), #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-tagline {
    font-size: 1.1rem;
    color: var(--wx-text-secondary);
    line-height: 1.6;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .about-section h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--wx-primary);
  }

  .about-section p {
    line-height: 1.8;
    color: var(--wx-text-primary);
    margin-bottom: 1rem;
  }

  .interests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .interest-card {
    padding: 1.5rem;
    background: var(--wx-bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--wx-border);
    transition: all 0.2s ease;
  }

  .interest-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.1);
    border-color: var(--wx-primary);
  }

  .interest-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .interest-card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--wx-text-primary);
  }

  .interest-card p {
    font-size: 0.9rem;
    color: var(--wx-text-secondary);
    margin: 0;
  }

  .contact-link {
    color: var(--wx-primary);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 2px solid var(--wx-primary);
    transition: all 0.2s ease;
  }

  .contact-link:hover {
    border-bottom-color: transparent;
    background: var(--wx-primary);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  @media (max-width: 768px) {
    .about-intro h1 {
      font-size: 2rem;
    }

    .character-illustration {
      width: 220px;
      height: 220px;
    }

    .interests-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
